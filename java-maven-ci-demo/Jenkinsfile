pipeline {
    agent any

    tools {
        maven 'Maven3'  // Убедитесь что в Jenkins есть инструмент с именем 'Maven3'
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
        disableConcurrentBuilds()
    }

    environment {
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
        REPO_URL = 'https://github.com/AleksandraRyma/lab6_attempt2.git'
        DEFAULT_BRANCH = 'master'
    }

    triggers {
        pollSCM('H/1 * * * *')  // Проверка каждую минуту
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${env.BRANCH_NAME ?: env.DEFAULT_BRANCH}",
                    url: "${env.REPO_URL}"
            }
        }  
        stage('Build') {
            steps {
                bat 'mvn -v'
                bat 'mvn -B -U clean compile'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn -B test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/site/jacoco',
                        reportFiles: 'index.html',
                        reportName: 'JaCoCo Coverage'
                    ])
                }
            }
        }

        stage('Package') {
            steps {
                bat 'mvn -B package'
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Quality gates') {
            when {
                anyOf {
                    branch 'develop'
                    branch 'master'
                }
            }
            steps {
                echo 'Quality checks placeholder'
            }
        }

        stage('Deploy (local)') {
            when {
                branch 'master'
            }
            steps {
                bat 'java -jar target/java-maven-ci-demo-1.0.0.jar > app.log 2>&1'
            }
        }
    }  // ✅ ЗАКРЫВАЮЩАЯ СКОБКА stages

    post {
        success {
            echo "Build successful for ${env.BRANCH_NAME ?: env.DEFAULT_BRANCH}"
        }
        failure {
            echo "Build failed for ${env.BRANCH_NAME ?: env.DEFAULT_BRANCH}"
        }
        always {
            cleanWs()
        }
    }
}